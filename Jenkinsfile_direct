pipeline {
    agent {
        label 'Docker_VM'
    }

    environment {
        IMAGE_NAME = "atakcivserver"
        DOCKERHUB_USER = "nov41337"
        FULL_IMAGE = "${DOCKERHUB_USER}/${IMAGE_NAME}"
        FTS_REPO = "https://github.com/FreeTAKTeam/FreeTAKServer.git"
        FTS_BRANCH = "master"   // cambia qui se vuoi tag o commit
    }

    stages {

        stage('Prepare workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Clone FreeTAKServer') {
            steps {
                sh """
                    git clone --depth 1 --branch ${FTS_BRANCH} ${FTS_REPO} FreeTAKServer
                """
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    def commitHash = sh(
                        script: "cd FreeTAKServer && git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()

                    env.IMAGE_TAG = commitHash

                    sh 'docker system prune -af'

                    sh """
						docker build \
						  -t ${FULL_IMAGE}:${IMAGE_TAG} \
						  -t ${FULL_IMAGE}:latest \
						  -f FreeTAKServer/Dockerfile \
						  FreeTAKServer
                    """
                }
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'NOVA_DOCKER_HUB',
                    usernameVariable: 'NOVA_DOCKER_USER',
                    passwordVariable: 'NOVA_DOCKER_PASS'
                )]) {
                    sh """
                        echo "$NOVA_DOCKER_PASS" | docker login \
                          -u "$NOVA_DOCKER_USER" \
                          --password-stdin
                    """
                }
            }
        }

        stage('Docker Push') {
            steps {
                sh """
                    docker push ${FULL_IMAGE}:${IMAGE_TAG}
                    docker push ${FULL_IMAGE}:latest
                """
            }
        }
    }

    post {
        always {
            sh 'docker logout || true'
        }
        success {
            echo "✅ Immagine pubblicata: ${FULL_IMAGE}:${IMAGE_TAG}"
        }
        failure {
            echo "❌ Build o push falliti"
        }
    }
}
